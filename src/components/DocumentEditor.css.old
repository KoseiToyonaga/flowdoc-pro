.document-editor {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 120px);
  background: white;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  overflow: hidden;
}

.editor-content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

.document-sidebar {
  width: 280px;
  background: #f8f9fa;
  border-right: 1px solid #e0e0e0;
  padding: 1.5rem;
  overflow-y: auto;
}

.document-sidebar h3 {
  margin-bottom: 1rem;
  color: #2c3e50;
}

.doc-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.doc-item {
  background: white;
  padding: 1rem;
  border-radius: 6px;
  border: 2px solid transparent;
  cursor: pointer;
  transition: all 0.2s;
}

.doc-item:hover {
  border-color: #3498db;
}

.doc-item.active {
  border-color: #3498db;
  background: #e3f2fd;
}

.doc-item-header {
  display: flex;
  justify-content: space-between;
  align-items: start;
  margin-bottom: 0.5rem;
}

.doc-item-header strong {
  flex: 1;
  color: #2c3e50;
  font-size: 0.95rem;
}

.doc-date {
  font-size: 0.8rem;
  color: #666;
}

.editor-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.doc-header {
  padding: 1.5rem;
  border-bottom: 1px solid #e0e0e0;
}

.doc-title-input {
  width: 100%;
  font-size: 1.5rem;
  font-weight: 600;
  border: none;
  outline: none;
  padding: 0.5rem;
  color: #2c3e50;
}

.doc-title-input:focus {
  background: #f8f9fa;
  border-radius: 6px;
}

.editor-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.markdown-toolbar {
  display: flex;
  gap: 0.25rem;
  padding: 0.75rem 1rem;
  background: #f8f9fa;
  border-bottom: 1px solid #e0e0e0;
  align-items: center;
}

.markdown-toolbar button {
  background: white;
  border: 1px solid #e0e0e0;
  padding: 0.5rem 0.75rem;
  border-radius: 4px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: all 0.2s;
}

.markdown-toolbar button:hover {
  background: #3498db;
  color: white;
  border-color: #3498db;
}

.markdown-toolbar .divider {
  color: #ccc;
  margin: 0 0.5rem;
}

.markdown-textarea {
  flex: 1;
  padding: 1.5rem;
  border: none;
  outline: none;
  resize: none;
  font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
  font-size: 0.95rem;
  line-height: 1.6;
}

.preview-area {
  flex: 1;
  padding: 1.5rem 2rem;
  overflow-y: auto;
  line-height: 1.8;
}

.preview-area h1 {
  font-size: 2rem;
  margin: 1.5rem 0 1rem;
  color: #2c3e50;
  border-bottom: 2px solid #e0e0e0;
  padding-bottom: 0.5rem;
}

.preview-area h2 {
  font-size: 1.6rem;
  margin: 1.3rem 0 0.8rem;
  color: #2c3e50;
}

.preview-area h3 {
  font-size: 1.3rem;
  margin: 1.1rem 0 0.6rem;
  color: #2c3e50;
}

.preview-area p {
  margin: 0.8rem 0;
  color: #333;
}

.preview-area ul, .preview-area ol {
  margin: 0.8rem 0;
  padding-left: 2rem;
}

.preview-area li {
  margin: 0.3rem 0;
}

.preview-area code {
  background: #f8f9fa;
  padding: 0.2rem 0.4rem;
  border-radius: 3px;
  font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
  font-size: 0.9em;
  color: #e74c3c;
}

.preview-area pre {
  background: #2c3e50;
  color: #ecf0f1;
  padding: 1rem;
  border-radius: 6px;
  overflow-x: auto;
  margin: 1rem 0;
}

.preview-area pre code {
  background: none;
  padding: 0;
  color: #ecf0f1;
}

.preview-area img {
  max-width: 100%;
  height: auto;
  border-radius: 6px;
  margin: 1rem 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.preview-area blockquote {
  border-left: 4px solid #3498db;
  padding-left: 1rem;
  margin: 1rem 0;
  color: #666;
  font-style: italic;
}

.preview-area table {
  width: 100%;
  border-collapse: collapse;
  margin: 1rem 0;
}

.preview-area table th,
.preview-area table td {
  border: 1px solid #e0e0e0;
  padding: 0.75rem;
  text-align: left;
}

.preview-area table th {
  background: #f8f9fa;
  font-weight: 600;
}

.preview-area input[type="checkbox"] {
  margin-right: 0.5rem;
}

.empty-state {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 1.1rem;
}
